mixin flex-container()
    section.flex-container
        // Your code here
        .flex-container__content
            +box('l', 'm', 'Мостовая сталь/Стальные конструкции мостов')

            .flex-container__content-col
                +box('m', 'm', 'Железобетонные конструкции мостов')
                +box('m', 'm', 'Дорожные ограждения барьерного типа')
        .flex-container__content
            +box('s', 'l', 'Шпунтовой замок').box_bg-blue
            +box('s', 'l', 'Мостовой крепеж')
            +box('s', 'l', 'Профили для деформационных швов').box_bg-blue
        .flex-container__content
            +box('m', 'm', 'Плетенные габионы')
            +box('m', 'm', 'Модульные мосты')
